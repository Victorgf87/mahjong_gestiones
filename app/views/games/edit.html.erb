<%= form_for @game do |game_form| %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Position</th>
        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Points</th>
        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Winner</th>
        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loser</th>
        <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Remove</th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <%= game_form.fields_for :hands, @game.hands.order(position: :asc) do |hand_form| %>
        <tr>
          <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900"><%= hand_form.object.position %></td>
          <td class="px-4 py-4 whitespace-nowrap">
            <%= hand_form.text_field :points, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </td>
          <td class="px-4 py-4 whitespace-nowrap">
            <%= hand_form.collection_select :winner_id, @game_players, :id, :full_name,
                                            { include_blank: t('translations.select', what: t('translations.winner')), prompt: 'sel' },
                                            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </td>
          <td class="px-4 py-4 whitespace-nowrap">
            <%= hand_form.collection_select :loser_id, @game_players, :id, :full_name,
                                            { include_blank: t('translations.self_drawn') },
                                            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= hand_form.check_box :_destroy, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
            <%= hand_form.label :_destroy, "Remove", class: "ml-2 text-sm text-gray-700" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <%= game_form.submit t('translations.update', what: t('translations.game')).capitalize,
                       class: "mt-6 w-full sm:w-auto px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-offset-2 focus:ring-indigo-500" %>
<% end %>

<div class="mt-8 pt-6 border-t border-gray-200">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Add New Hand</h3>
  <%= form_for @new_hand, html: { class: "flex items-end space-x-4" } do |new_hand_form| %>
    <div class="flex-grow">
      <%= new_hand_form.label :points, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= new_hand_form.text_field :points, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity=50" %>
    </div>

    <%= new_hand_form.submit t('translations.create', what: t('translations.new', what: t('translations.hand'))).capitalize,
                             class: "px=4 py=2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green=600 hover:bg-green=700 focus:outline-none focus:ring=2 focus:ring-offset=2 focus:ring-green=500" %>
  <% end %>
</div>

