<% games.group_by(&:round).each do |round_number, games_group| %>
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 inline-block bg-blue-100 rounded-full px-4 py-2">
      Ronda <%= round_number %>
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <%= render partial: 'games/card', collection: games_group, as: :game %>
    </div>
  </div>
<% end %>