<div class="max-w-sm mx-auto bg-white rounded-xl shadow-md overflow-hidden ">
  <div class="p-2">
    <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold mb-4">
      Fecha de la partida: <%= game.created_at.strftime('%d/%m/%Y') %>
    </div>

    <div class="grid grid-cols-3 gap-4 mb-6">
      <div class="col-start-2 text-center">
        <p class="text-2xl font-bold text-blue-600">北</p>
        <p class="text-xs text-gray-500">Kita (Norte)</p>
        <!--        <p><%#= game.players.find_by(position: 'north').name %></p>-->
        <!--        <p class="text-gray-600"><%#= game.players.find_by(position: 'north').score %> puntos</p>-->
      </div>

      <div class="col-start-1 text-center self-center">
        <p class="text-2xl font-bold text-yellow-600">西</p>
        <p class="text-xs text-gray-500">Nishi (Oeste)</p>
        <!--        <p><%#= game.players.find_by(position: 'west').name %></p>-->
        <!--        <p class="text-gray-600"><%#= game.players.find_by(position: 'west').score %> puntos</p>-->
      </div>

      <div class="col-start-3 text-center self-center">
        <p class="text-2xl font-bold text-red-600">東</p>
        <p class="text-xs text-gray-500">Higashi (Este)</p>
        <!--        <p><%#= game.players.find_by(position: 'east').name %></p>-->
        <!--        <p class="text-gray-600"><%#= game.players.find_by(position: 'east').score %> puntos</p>-->
      </div>

      <div class="col-start-2 text-center">
        <p class="text-2xl font-bold text-green-600">南</p>
        <p class="text-xs text-gray-500">Minami (Sur)</p>
        <!--        <p><%#= game.players.find_by(position: 'south').name %></p>-->
        <!--        <p class="text-gray-600"><%#= game.players.find_by(position: 'south').score %> puntos</p>-->
      </div>
    </div>

    <div class="flex justify-end">
      <%= link_to game_path(game), class: "inline-flex items-center justify-center w-12 h-12 rounded-full bg-indigo-500 text-white hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <span class="sr-only">Ver detalles</span>
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
