<div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <!-- Encabezado del Juego -->
  <div class="text-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Juego #<%= @game.id %></h1>
    <p class="text-gray-500">Detalles del juego con 4 jugadores</p>
  </div>

  <%full_game = OpenStruct.new(@game.generate_full_game) %>


  <!-- Tabla de Manos Jugadas -->
  <div class="overflow-x-auto">
    <table class="w-full border-collapse border border-gray-200">
      <thead>
      <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2 text-left">#</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Ganador</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Perdedor</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Puntos</th>
        <% full_game.players.each do |player| %>
          <th class="border border-gray-300 px-4 py-2 text-left"><%=player %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% full_game.hands.map{OpenStruct.new(_1)}.each_with_index do |hand, index| %>
        <tr class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %>">
          <td class="border border-gray-300 px-4 py-2"><%= index + 1 %></td>
          <td class="border border-gray-300 px-4 py-2"><%= hand.winner %></td>
          <td class="border border-gray-300 px-4 py-2">
            <% if hand.loser.present? %>
              <%= hand.loser %>
            <% else %>
              <span class="italic text-gray-400">Sin perdedor</span>
            <% end %>
          </td>
          <td class="border border-gray-300 px-4 py-2"><%= hand.points %></td>

          <% hand.changes.each do |change| %>
            <td class="border border-gray-300 px-4 py-2"><%= change %></td>
          <% end %>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <!-- Puntuación Total por Jugador -->
  <div class="mt-8">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Puntuación Total</h2>
    <div class="grid grid-cols-2 gap-x-6 gap-y-4">
      <% full_game.results.each do |name, score| %> <!-- Asumiendo que tienes un método para obtener los jugadores -->
        <div class="p-4 bg-blue-100 rounded-lg shadow-sm flex justify-between items-center">
          <span class="font-medium text-blue-800"><%= name %></span>
          <span class="text-lg font-bold text-blue-900"><%=t('translations.score_show', score: ) %></span> <!-- Asume que tienes un método `total_points` -->
        </div>
      <% end %>
    </div>
  </div>

  <!-- Botón Volver -->
  <div class="mt-6 text-center">
    <a href="<%= games_path %>"
       class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-200">
      Volver a la lista de juegos
    </a>
  </div>
</div>
