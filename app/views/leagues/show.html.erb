<div class="max-w-4xl mx-auto pb-8">
  <div class="relative">
    <% if @league.cover_image&.file&.attached? %>
      <%= image_tag @league.cover_image.file, class: "w-full h-64 object-cover rounded-t-lg" %>
    <% else %>
      <div class="w-full h-64 bg-gradient-to-r from-blue-400 to-purple-500 rounded-t-lg"></div>
    <% end %>
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent h-24"></div>
    <h1 class="absolute bottom-4 left-6 text-4xl font-bold text-white"><%= @league.name %></h1>
  </div>

  <div class="bg-white shadow-lg rounded-b-lg px-6 py-8">
    <div class="flex gap-x-4">
      <% if @league.start_date %>
        <div class="flex items-center mb-6">
          <svg class="w-6 h-6 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-xl text-gray-700">Inicio: <%= @league&.start_date&.strftime("%d / %b / %Y") %></span>
        </div>
      <% end %>

      <% if @league.end_date %>
        <div class="flex items-center mb-6">
          <span class="text-xl text-gray-700">Fin: <%= @league&.end_date&.strftime("%d / %b / %Y") %></span>
        </div>
      <% end %>
    </div>

    <div class="bg-gray-100 rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-semibold mb-4"><%= t('translations.details_of', what: t('translations.league')).capitalize %></h2>
      <p class="text-gray-700">
        <%= @league.description || '---' %>
      </p>
    </div>

    <div class="mb-4">
      <ul class="flex border-b">
        <li class="-mb-px mr-1" id="tab1">
          <a class="bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" href="#"><%=t('translations.player').pluralize.capitalize %></a>
        </li>
        <li class="mr-1" id="tab2">
          <a class="bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" href="#"><%=t('translations.game').pluralize.capitalize %></a>
        </li>
      </ul>
    </div>

    <div id="tab1-content" class="tab-content">
      <%= render partial: 'players/players_list_in_event', locals: {elements: @league.players}, as: :cosa %>
    </div>
    <div id="tab2-content" class="tab-content hidden">
      <%= render 'games/list', games: @league.games %>
    </div>





    <%#= render partial: "list", collection: @league.games, as: :game %>



    <div class="flex justify-between items-center">
      <%= link_to leagues_path, class: "flex items-center text-blue-500 hover:text-blue-600 transition duration-150 ease-in-out" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Volver a la lista
      <% end %>
      <%= link_to edit_league_path(@league), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-150 ease-in-out" do %>
        Editar Liga
      <% end %>
    </div>
  </div>
</div>
